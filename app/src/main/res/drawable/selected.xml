<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFA000"/> <!-- Change color when pressed -->
            <corners android:radius="8dp"/> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFC107"/> <!-- Default color -->
            <corners android:radius="8dp"/> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
</selector>